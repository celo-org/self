{
  "name": "@openpassport/contracts",
  "version": "0.0.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/zk-passport/openpassport"
  },
  "license": "MIT",
  "author": "motemotech <i.am.nicoshark@gmail.com>",
  "files": [
    "contracts/constants/*",
    "contracts/interfaces/*",
    "contracts/libraries/*",
    "contracts/proxy/*",
    "contracts/registry/*",
    "contracts/verifiers/*",
    "contracts/IdentityVerificationHub.sol",
    "contracts/IdentityVerificationHubImplV1.sol",
    "contracts/utils/PCR0Manager.sol"
  ],
  "scripts": {
    "publish": "npm publish --access public",
    "compile": "npx hardhat clean && npx hardhat compile",
    "fix-contract-address": "./scripts/fixDeployment.sh",
    "deploy:all": "./scripts/deploy.sh all",
    "deploy:hub": "./scripts/deploy.sh hub",
    "deploy:registry": "./scripts/deploy.sh registry",
    "deploy:verifiers": "./scripts/deploy.sh verifiers",
    "update:cscaroot": "npx hardhat ignition deploy ignition/modules/scripts/updateRegistryCscaRoot.ts --network celo --verify",
    "update:hub": "npx hardhat ignition deploy ignition/modules/scripts/updateRegistryHub.ts --network celo --verify",
    "update:ofacroot": "npx hardhat ignition deploy ignition/modules/scripts/updateRegistryOfacRoot.ts --network celo --verify",
    "upgrade:hub": "npx hardhat ignition deploy ignition/modules/deployNewHubAndUpgrade.ts --network celo --verify",
    "upgrade:registry": "npx hardhat ignition deploy ignition/modules/deployNewRegistryAndUpgrade.ts --network celo --verify",
    "deploy:pcr0": "npx hardhat ignition deploy ignition/modules/deployPCR0.ts --network celo --verify",
    "update:pcr0": "PCR0_ACTION=add PCR0_KEY=123 npx hardhat ignition deploy ignition/modules/scripts/updatePCR0.ts --network celo --reset",
    "test": "npx hardhat test",
    "test:coverage": "TEST_ENV=local npx hardhat coverage",
    "test:unit": "TEST_ENV=local npx hardhat test test/unit/*",
    "test:integration": "TEST_ENV=local npx hardhat test test/integration/*",
    "test:example": "TEST_ENV=local npx hardhat test test/example/*",
    "test:airdrop": "TEST_ENV=local npx hardhat test test/example/airdrop.test.ts",
    "test:attribute": "TEST_ENV=local npx hardhat test test/unit/CircuitAttributeHandler.test.ts",
    "test:disclose": "TEST_ENV=local npx hardhat test test/integration/vcAndDisclose.test.ts",
    "test:endtoend": "TEST_ENV=local npx hardhat test test/Integration/endToEnd.test.ts",
    "test:verifyall": "TEST_ENV=local npx hardhat test test/integration/verifyAll.test.ts",
    "test:formatter": "TEST_ENV=local npx hardhat test test/unit/formatter.test.ts",
    "test:hub": "TEST_ENV=local npx hardhat test test/unit/IdentityVerificationHub.test.ts",
    "test:register": "TEST_ENV=local npx hardhat test test/integration/commitmentRegistration.test.ts",
    "test:registry": "TEST_ENV=local npx hardhat test test/unit/IdentityRegistry.test.ts"
  },
  "dependencies": {
    "@ashpect/smt": "https://github.com/ashpect/smt#main",
    "@eth-optimism/hardhat-ovm": "^0.2.4",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openpassport/zk-kit-lean-imt": "^0.0.6",
    "@openpassport/zk-kit-smt": "^0.0.1",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.1.0",
    "@types/circomlibjs": "^0.1.6",
    "@types/jest": "^29.5.12",
    "@zk-kit/imt": "^2.0.0-beta.4",
    "@zk-kit/imt.sol": "^2.0.0-beta.12",
    "@zk-kit/lean-imt": "^2.0.1",
    "axios": "^1.6.2",
    "circomlibjs": "^0.1.7",
    "dotenv": "^16.3.1",
    "hardhat-contract-sizer": "^2.10.0",
    "mocha": "^10.4.0",
    "node-forge": "^1.3.1",
    "poseidon-lite": "^0.3.0",
    "poseidon-solidity": "^0.0.5",
    "snarkjs": "^0.7.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition": "^0.15.3",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.6",
    "@nomicfoundation/ignition-core": "^0.15.3",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/snarkjs": "^0.7.7",
    "chai": "^4.4.1",
    "ethers": "^6.12.1",
    "hardhat": "^2.22.6",
    "hardhat-gas-reporter": "^1.0.10",
    "mochawesome": "^7.1.3",
    "solidity-coverage": "^0.8.14",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.1.6"
  }
}
