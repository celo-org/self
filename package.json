{
  "name": "openpassport-monorepo",
  "packageManager": "yarn@4.6.0",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/sdk/*",
      "!packages/sdk/tests",
      "!packages/noir",
      "!packages/prover"
    ]
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2"
  },
  "scripts": {
    "prepare": "husky",
    "fmt": "yarn prettier --write",
    "fmt:fix": "yarn prettier --write"
  },
  "lint-staged": {
    "*.(json|tsx?|.jsx?)": "yarn fmt:fix"
  }
}
